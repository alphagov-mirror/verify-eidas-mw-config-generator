#server settings
server.port=8443

#TLS settings
server.ssl.key-store:file:/opt/eidas-middleware/configuration/ssl.p12
server.ssl.key-store-password:<%= ks_password %>
server.ssl.key-password=<%= ks_password %>
server.ssl.keyStoreType:PKCS12
server.ssl.keyAlias:localhost

#H2 datasource
spring.datasource.url=<%= db_url %>
spring.datasource.username=<%= db_username %>
spring.datasource.password=<%= db_password %>

#credentials (user/Pleasechangeme!)
poseidas.admin.username=user
poseidas.admin.hashed.password=<%= admin_password_hash %>

#logging
##application logs
logging.file=/opt/eidas-middleware/eidas-middleware.log

##access logs
server.tomcat.accesslog.directory=/opt/eidas-middleware
server.tomcat.accesslog.enabled=true
server.tomcat.accesslog.pattern=combined
server.tomcat.accesslog.rename-on-rotate=true
server.tomcat.accesslog.suffix=.log
server.tomcat.accesslog.request-attributes-enabled=true
server.tomcat.remote-ip-header=x-forwarded-for
server.tomcat.protocol-header=x-forwarded-proto
