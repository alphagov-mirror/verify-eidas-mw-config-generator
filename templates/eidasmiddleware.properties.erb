#Please Note: Use absolute filepath
#PATH to the folder with the service provider metadata
SERVICE_PROVIDER_CONFIG_FOLDER=/opt/eidas-middleware/configuration/euconfigs
#PATH to the certificate the metadata is signed with
SERVICE_PROVIDER_METADATA_SIGNATURE_CERT=/opt/eidas-middleware/configuration/connector_metadata_cert.der

#URL at which middleware is running
SERVER_URL=<%= middleware_url %>

#EntityID of the corresponding service provider in POSeIDAS.xml
ENTITYID_INT=<%= connector_metadata_url %>

#Path to the keystore containing the middleware signature keypair
MIDDLEWARE_SIGN_KEY=/opt/eidas-middleware/configuration/middleware_sign.jks
#Pin of the signature key
MIDDLEWARE_SIGN_PIN=<%= ks_password %>
#Alias of the signature key
MIDDLEWARE_SIGN_ALIAS=middleware_sign
#Path to the keystore containing the middleware crypto keypair
MIDDLEWARE_CRYPT_KEY=/opt/eidas-middleware/configuration/middleware_decrypt.jks
#Pin of the crypto key
MIDDLEWARE_CRYPT_PIN=<%= ks_password %>
#Alias of the crypto key
MIDDLEWARE_CRYPT_ALIAS=middleware_decrypt

#country where the MW is deployed
COUNTRYCODE=GB

#metadata contact person
CONTACT_PERSON_COMPANY=Verify
CONTACT_PERSON_EMAIL=idasupport+eidasmw@digital.cabinet-office.gov.uk
CONTACT_PERSON_GIVENNAME=
CONTACT_PERSON_SURNAME=
CONTACT_PERSON_TEL=
CONTACT_PERSON_ADDRESS=

#metadata organization
ORGANIZATION_DISPLAY_NAME=Verify
ORGANIZATION_NAME=verify
ORGANIZATION_URL=https://www.signin.service.gov.uk
ORGANIZATION_LANG=EN
